<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/feed_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pt_20"
        android:layout_marginStart="@dimen/pt_16"
        android:layout_marginTop="@dimen/pt_8"
        android:layout_marginBottom="@dimen/pt_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:orientation="vertical"
        android:stateListAnimator="@null"
        android:textColor="@color/color_2f2"
        android:textSize="@dimen/pt_10"
        android:visibility="visible"
        app:backgroundTint="@color/color_gray"
        app:cornerRadius="10dp"
        app:icon="@drawable/icon_tag"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/pt_4"
        app:iconSize="@dimen/pt_12"
        app:iconTintMode="multiply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="神秘的jetpack" />

</androidx.constraintlayout.widget.ConstraintLayout>