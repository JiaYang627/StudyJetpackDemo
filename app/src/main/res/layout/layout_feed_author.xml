<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pt_40"
    android:paddingLeft="@dimen/pt_16"
    android:layout_marginBottom="@dimen/pt_10"
    android:paddingRight="@dimen/pt_16">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/pt_40"
        android:layout_height="@dimen/pt_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />


    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pt_10"
        android:textColor="@color/color_333"
        android:textSize="@dimen/pt_14"
        app:layout_constraintBottom_toTopOf="@+id/create_time"
        app:layout_constraintLeft_toRightOf="@+id/user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="use_name" />

    <TextView
        android:id="@+id/create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pt_10"
        android:textColor="@color/color_999"
        android:textSize="@dimen/pt_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/user_avatar"
        tools:text="1小时前" />

    <ImageView
        android:id="@+id/feed_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_item_cell_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>